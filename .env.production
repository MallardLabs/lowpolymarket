# Production Environment Configuration
ENVIRONMENT=production
DEBUG=false

# Logging settings for production
LOG_LEVEL=WARNING
LOG_JSON_FORMAT=true
LOG_FILE_PATH=logs/production.log
LOG_FILE_MAX_BYTES=50000000
LOG_FILE_BACKUP_COUNT=10

# Cache settings for production
CACHE_DEFAULT_TTL=300
CACHE_PREDICTION_TTL=300
CACHE_MARKET_DATA_TTL=60
CACHE_USER_BALANCE_TTL=180

# Database settings for production
DATABASE_MIN_CONNECTIONS=10
DATABASE_MAX_CONNECTIONS=50
DATABASE_CONNECTION_TIMEOUT=60
DATABASE_QUERY_TIMEOUT=45

# Business logic settings for production
BUSINESS_MAX_BET_AMOUNT=1000000
BUSINESS_MIN_RESOLUTION_VOTES=3
BUSINESS_MAX_CONCURRENT_BETS=100
BUSINESS_AUTO_REFUND_HOURS=168

# Rate limiting settings for production (strict)
RATE_LIMIT_USER_REQUESTS_PER_MINUTE=10
RATE_LIMIT_USER_BETS_PER_MINUTE=5
RATE_LIMIT_GUILD_REQUESTS_PER_MINUTE=100
RATE_LIMIT_ADMIN_BYPASS_ENABLED=false