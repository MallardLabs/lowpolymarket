# Development Environment Configuration
ENVIRONMENT=development
DEBUG=true

# Logging settings for development
LOG_LEVEL=DEBUG
LOG_CONSOLE_COLORS=true
LOG_JSON_FORMAT=false

# Cache settings for development (no Redis required)
CACHE_REDIS_URL=
CACHE_DEFAULT_TTL=60
CACHE_MAX_MEMORY_CACHE_SIZE=500

# Business logic settings for development
BUSINESS_MAX_BET_AMOUNT=10000
BUSINESS_MIN_RESOLUTION_VOTES=1
BUSINESS_MAX_CONCURRENT_BETS=10

# Rate limiting settings for development (more lenient)
RATE_LIMIT_USER_REQUESTS_PER_MINUTE=20
RATE_LIMIT_USER_BETS_PER_MINUTE=10
RATE_LIMIT_ADMIN_BYPASS_ENABLED=true